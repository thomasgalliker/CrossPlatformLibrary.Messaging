<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessagingSample.MainPage"
             Title="CrossPlatformLibrary.Messaging">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Button Grid.Row="0"
            Text="Send EMail"
            Clicked="ButtonSendMail"
            VerticalOptions="Start"
            HorizontalOptions="StartAndExpand"/>

    <Button Grid.Row="1"
           Text="Send Sms"
           Clicked="ButtonSendSms"
           VerticalOptions="Start"
           HorizontalOptions="StartAndExpand"/>

    <Button Grid.Row="2"
           Text="Call"
           Clicked="ButtonPhoneCall"
           VerticalOptions="Start"
           HorizontalOptions="StartAndExpand"/>
  </Grid>

</ContentPage>