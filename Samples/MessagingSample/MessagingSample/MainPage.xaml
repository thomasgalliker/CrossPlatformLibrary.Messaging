<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessagingSample.MainPage"
             Title="CrossPlatformLibrary.Messaging">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Button
      x:Name="ButtonSendMail"
      Grid.Row="0"
      Text="Send EMail"
      Clicked="OnButtonSendMailClicked"
      VerticalOptions="Start"
      HorizontalOptions="StartAndExpand"/>

    <Button 
      x:Name="ButtonSendSms"
      Grid.Row="1"
      Text="Send Sms"
      Clicked="OnButtonSendSmsClicked"
      VerticalOptions="Start"
      HorizontalOptions="StartAndExpand"/>

    <Button 
      x:Name="ButtonPhoneCall"
      Grid.Row="2"
      Text="Call"
      Clicked="OnButtonPhoneCallClicked"
      VerticalOptions="Start"
      HorizontalOptions="StartAndExpand"/>
  </Grid>

</ContentPage>